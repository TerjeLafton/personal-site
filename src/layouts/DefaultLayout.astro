---
import BaseLayout from "./BaseLayout.astro";
import { Icon } from "astro-icon/components";

interface Props {
  pageTitle: string;
}
const { pageTitle } = Astro.props;

const navLinks = [
  { title: "Home", href: "/" },
  { title: "Projects", href: "/projects" },
  { title: "Blog", href: "/blog" },
  { title: "Devlog", href: "/devlog" },
  { title: "About", href: "/about" },
];
const socialLinks = [
  { title: "GitHub", href: "https://github.com/TerjeLafton", icon: "simple-icons:github" },
  { title: "Linkedin", href: "https://www.linkedin.com/in/terje-lafton-164570b9/", icon: "simple-icons:linkedin" },
  { title: "Email", href: "mailto:terje@lafton.io", icon: "simple-icons:maildotru" },
];
---

<BaseLayout pageTitle={pageTitle}>
  <div class="flex flex-col min-h-screen w-full">
    <div class="border-b border-gray-800 p-4 sm:p-6 w-full">
      <ul class="flex flex-wrap justify-center gap-4 sm:gap-8">
        {
          navLinks.map((link) => (
            <li>
              <a class="text-lg hover:text-purple-400 hover:text-xl transition-all" href={link.href}>
                {link.title}
              </a>
            </li>
          ))
        }
      </ul>
    </div>

    <div class="flex-1 w-full max-w-3xl mx-auto mb-6">
      <slot />
    </div>

    <div
      class="border-t border-gray-800 flex flex-col sm:flex-row justify-between items-center sm:items-start gap-4 p-4 sm:p-6 w-full"
    >
      <p class="text-sm text-gray-500">
        Â© {new Date().getFullYear()} Terje Lafton
      </p>
      <div class="flex flex-row gap-4">
        {
          socialLinks.map((link) => (
            <a href={link.href}>
              <Icon name={link.icon} size={24} class="text-gray-500 hover:text-purple-400 transition-colors" />
            </a>
          ))
        }
      </div>
    </div>
  </div>
</BaseLayout>
