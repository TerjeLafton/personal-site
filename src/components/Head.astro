---
interface Props {
  title: string;
}
const { title = "Terje Lafton's personal site", ...props } = Astro.props;

const ogDetails = {
  title: "Terje Lafton's personal site",
  description: "Welcome to my personal site!",
};
---

<head>
  <meta charset="utf-8" />
  <link rel="icon" type="image/png" href="/favicon.png" />

  <title>{title}</title>
  <meta name="description" content={ogDetails.description} />
  <meta name="viewport" content="width=device-width" />

  <meta property="og:title" content={ogDetails.title} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://lafton.io" />
  <meta property="og:description" content={ogDetails.description} />
</head>
