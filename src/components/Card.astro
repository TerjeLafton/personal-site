---
import Tag from "./Tag.astro";

interface Props {
  title: string;
  description: string;
  tags: string[];
  link: string | undefined;
}
const { title, description, tags, link } = Astro.props;
---

<a href={link} target="_blank" rel="noopener noreferrer" class="w-full">
  <div class="bg-gray-800 rounded-lg p-6 border border-gray-700 hover:border-purple-400 hover:scale-105 transition-all w-full max-w-full">
    <h3 class="text-xl font-bold mb-2">{title}</h3>
    <p class="text-gray-300 mb-4">{description}</p>

    <div class="mt-4 pt-4 border-t border-gray-700">
      <div class="flex flex-wrap gap-2">
        {tags.map((tag) => <Tag name={tag} />)}
      </div>
    </div>
  </div>
</a>
